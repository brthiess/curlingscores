<section class='game-details-container'>
	<section class='linescore'>
		<table class='linescore-table'>
			<thead>
				<th class='linescore-table-header t-left'>Team</th>
				<th class='linescore-table-header t-left'></th>
				<% for(var i = 1; i <= game.numberOfEnds; i++) { %>
					<th class='linescore-table-header t-center'><%- i %></th>
				<% } %>
				<th class='linescore-table-header t-center'>Tot</th>
			</thead>
			<tbody>
				<tr>
					<td class='linescore-table-data t-left no-padding'><%- game.homeTeamDisplayName %></td>
					<td class='linescore-table-data t-left'><%- (game.homeHammer ? "<img class='linescore-hammer' src='/images/hammer.png'/>" : "") %></td>
					<% for (var i = 0; i < game.numberOfEnds; i++) { %>
						<td class='linescore-table-data t-center'><%- (i < game.homeScores.length ? game.homeScores[i] : "<span class='faded'>X</span>") %></td>
					<% } %>
					<td class='linescore-table-data t-center'><strong><%- game.homeTotal %></strong></td>
				</tr>
				<tr>
					<td class='linescore-table-data t-left no-padding'><%- game.awayTeamDisplayName %></td>
					<td class='linescore-table-data t-left'><%- (game.awayHammer ? "<img class='linescore-hammer' src='/images/hammer.png'/>" : "") %></td>
					<% for (var i = 0; i < game.numberOfEnds; i++) { %>
						<td class='linescore-table-data t-center'><%- (i < game.awayScores.length ? game.awayScores[i] : "<span class='faded'>X</span>") %></td>
					<% } %>
					<td class='linescore-table-data t-center'><strong><%- game.awayTotal %></strong></td>
				</tr>
			</tbody>
		</table>
	</section>
	<section class='game-details-team-container'>
		<div class='game-details-team'>
			<% if(game.percentagesAvailable == true) { %>
				<% include percentages.ejs %>
			<% } 
			 else { %>
				<% include team.ejs %>
			<% } %>
		</div>
		
	</section>
</section>